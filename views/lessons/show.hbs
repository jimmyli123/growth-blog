  
<div class="row">
    <div class="col s12 m8">
        <h3>{{lesson.title}}
            <small>{{{editIcon lesson.user user lesson._id false}}}</small>
        </h3>
        <div class="card story">
            <div class="card-content">
                <span class="card-title">{{formatDate lesson.createdAt 'MMMM Do YYYY, h:mm:ss a'}}</span>
                {{{lesson.lesson}}}
            </div>
            <div class="container">
                <img class="responsive-img" src="{{lesson.image}}">
            </div>
        </div>
    </div>
    <div class="col s12 m4">
        <div class="card center-align">
            <div class="card-content">
                <span class="card-title">{{lesson.user.displayName}}</span>
                <img src="{{lesson.user.image}}" class="circle responsive-img img-small">
            </div>
            <div class="card-action">
                <a href="/lessons/user/{{lesson.user._id}}">More From {{lesson.user.firstName}}</a>
            </div>
        </div>
    </div>
</div>