<h1>Stories</h1>
<div class="row">
    
    {{#each lessons}}
        <div class="col s12 m4">
            <div class="card">
                <div class="card-image">
                    {{{editIcon user ../user _id }}}
                </div>
                <div class="card-content center-align">
                    <h5>{{title}}</h5>
                    <p>{{body}}</p>
                     
                    <br>
                    <div class="chip">
                        <img src="{{user.image}}" alt="">
                        <a href="/lessons/user/{{user._id}}">{{user.displayName}}</a>
                    </div>
                </div>
                <div class="card-action center-align">
                    <a href="/lessons/{{_id}}" class="btn grey">Read More</a>
                </div>
            </div>
        </div>
    {{else}}
        <p>No lessons to display</p>
    {{/each}}
</div>